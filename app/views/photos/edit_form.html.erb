<h1>Editing <%= @photo.caption %></h1>

<form action="http://localhost:3000/update_photo/<%= @photo.id %>">

  <div>
    <label for="photo caption">Caption:</label>
    <input name="the_caption" type="text" size="50" id="photo_caption" value="<%= @photo.caption %>">
  </div>

  <div>
    <label for="photo_image_url">Image URL:</label>
    <input name="the_source" type="text" size="50" id="photo_image_url" value="<%= @photo.source %>">
  </div>

  <div>
    <input type="submit" value="Edit photo">
  </div>

</form>
